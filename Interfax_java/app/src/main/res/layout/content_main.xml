<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sebas.desarrollog.interfaz_java.MainActivity"
    tools:showIn="@layout/activity_main"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/button"
        android:layout_width="168dp"
        android:layout_height="49dp"
        android:onClick="reseteaContador"
        android:text="Resetear"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="231dp"
        android:layout_below="@+id/txtCon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp" />

    <TextView
        android:id="@+id/txtCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:text="Contador"
        tools:fontFamily="sans-serif-smallcaps"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="30dp"
        tools:textSize="30sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="168dp"
        android:layout_height="49dp"
        android:layout_marginTop="38dp"
        android:onClick="incrementarContador"
        android:text="Incrementa en 1"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="157dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="168dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:onClick="restaContador"
        android:text="Resta 1"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="301dp"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />
</RelativeLayout>
